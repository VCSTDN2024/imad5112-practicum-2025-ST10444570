<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist Manager App"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/music_logo" />

        <Button
            android:id="@+id/btnShowSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F3F3"
            android:text="Display Songs" />

        <Button
            android:id="@+id/btnAvgRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Average Rating"
            android:backgroundTint="#F6F3F3"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Main"
            android:backgroundTint="#F6F3F3"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>